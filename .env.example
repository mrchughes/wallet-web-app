# Environment Configuration
NODE_ENV=development
PORT=3001

# Solid OIDC Configuration
SOLID_OIDC_ISSUER=https://oidc.solid.gov.uk
SOLID_OIDC_CLIENT_ID=wallet-web-app
SOLID_OIDC_CLIENT_SECRET=your-client-secret
SOLID_OIDC_REDIRECT_URI=http://localhost:3001/auth/callback

# Mock DID:ION Service
DID_ION_SERVICE_URL=http://localhost:3002

# Mock PDS Service
PDS_BASE_URL=https://pds.example.org

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
SESSION_TIMEOUT=1800

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000

# Database (if needed for session storage)
# DATABASE_URL=sqlite://./data/wallet.db

# Logging
LOG_LEVEL=info

# Development
MOCK_SERVICES=true
ENABLE_CORS=true
