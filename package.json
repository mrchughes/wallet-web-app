{
    "name": "wallet-web-app",
    "version": "1.0.0",
    "description": "A web application for managing decentralized identities and verifiable credentials in the Solid ecosystem",
    "main": "dist/backend/app.js",
    "scripts": {
        "build": "npm run build:backend && npm run build:frontend",
        "build:backend": "tsc -p tsconfig.backend.json",
        "build:frontend": "cd src/frontend && npm run build",
        "start": "node dist/backend/app.js",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "ts-node-dev --respawn --transpile-only src/backend/app.ts",
        "dev:frontend": "cd src/frontend && npm start",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "postman": "newman run test/postman/wallet-web-app.postman_collection.json",
        "setup": "npm install && cd src/frontend && npm install",
        "docker:build": "docker build -t wallet-web-app .",
        "docker:run": "docker run -p 3000:3000 -p 3001:3001 wallet-web-app",
        "mocks": "node test/mocks/start-mocks.js"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "morgan": "^1.10.0",
        "dotenv": "^16.3.1",
        "jsonwebtoken": "^9.0.2",
        "node-jose": "^2.2.0",
        "rdflib": "^2.2.31",
        "n3": "^1.17.2",
        "crypto": "^1.0.1",
        "node-fetch": "^3.3.2",
        "uuid": "^9.0.0",
        "bcrypt": "^5.1.1",
        "joi": "^17.9.2",
        "axios": "^1.5.0",
        "multer": "^1.4.5-lts.1",
        "express-rate-limit": "^6.10.0"
    },
    "devDependencies": {
        "@types/node": "^20.5.0",
        "@types/express": "^4.17.17",
        "@types/cors": "^2.8.13",
        "@types/morgan": "^1.9.4",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/uuid": "^9.0.2",
        "@types/bcrypt": "^5.0.0",
        "@types/multer": "^1.4.7",
        "@types/jest": "^29.5.4",
        "typescript": "^5.1.6",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "jest": "^29.6.2",
        "ts-jest": "^29.1.1",
        "supertest": "^6.3.3",
        "concurrently": "^8.2.0",
        "newman": "^5.3.2",
        "nodemon": "^3.0.1"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mrchughes/wallet-web-app.git"
    },
    "keywords": [
        "solid",
        "verifiable-credentials",
        "did-ion",
        "wallet",
        "decentralized-identity"
    ],
    "author": "Chris Hughes",
    "license": "MIT"
}