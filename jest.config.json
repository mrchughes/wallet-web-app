{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
        "<rootDir>/test"
    ],
    "testMatch": [
        "**/?(*.)+(spec|test).ts?(x)"
    ],
    "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "setupFilesAfterEnv": [
        "<rootDir>/test/setup.ts"
    ],
    "globals": {
        "ts-jest": {
            "tsconfig": "tsconfig.json"
        }
    },
    "collectCoverageFrom": [
        "src/**/*.{ts,tsx}",
        "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
        "text",
        "lcov"
    ]
}